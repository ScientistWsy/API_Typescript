{
    "openapi": "3.0.0",
    "info": {
        "title": "API de manipulação de produtos",
        "description": "Essa API tem como objetivo a manipulação dos produtos",
        "termsOfService": "https://www.google.com",
        "contact": {
            "email": "inDevelopement..."
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000/api",
            "description": "API de Homolog"
        },
        {
            "url": "https://www.google.com/v2",
            "description": "APi Produção"
        }
    ],
    "paths": {
        "/livro": {
            "get": {
                "summary": "Retorna um livro específico.",
                "description": "Busca um livro específico no banco de dados.",
                "tags": ["Livros"]
            },
            "parameters": [
                {
                    "name": "id",
                    "in": "query",
                    "description": "Identificador do livro",
                    "required": true,
                    "schema": {
                        "type": "number"
                    }
                }
            ]
        },
        "/livros": {
            "get": {
                "summary": "Retorna todos os livros.",
                "description": "Busca todos os livros cadastrados do banco de dados.",
                "tags": ["Livros"]
            }
        },
        "/livro/new": {
            "post": {
                "summary": "Adiciona um novo livro.",
                "description": "Cria um novo registro de um livro.",
                "tags": [
                    "Livros"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/Livro"
                            },
                            "examples": {
                                "livroExemplo": {
                                    "value": {
                                        "Titulo": "O Homem que Calculava",
                                        "Autor": "Malba Ta",
                                        "ISBN": 123456789,
                                        "AnoDePublicacao": 1998,
                                        "Editora": {
                                            "Id": 1
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Campos obrigarórios inválidos."
                    },
                    "500": {
                        "description": "Erro ao criar o livro."
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#components/schemas/Livro"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/livro/update": {
            "put": {
                "summary": "Atualiza dados do livro.",
                "description": "Atualiza as informações de um livro cadastrado.",
                "tags": ["Livros"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "query",
                        "description": "Identificador do livro",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/Livro"
                            },
                            "examples": {
                                "livroExemplo": {
                                    "value": {
                                        "Titulo": "O Homem que Calculava",
                                        "Autor": "Malba Taham",
                                        "ISBN": 987654321,
                                        "AnoDePublicacao": 2000,
                                        "Editora": {
                                            "Id": 1
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/livro/remove": {
            "delete": {
                "summary": "Apaga o cadastro de um livro.",
                "description": "Remove um livro cadastrado no banco de dados.",
                "tags": ["Livros"]
            },
            "parameters": [
                {
                    "name": "id",
                    "in": "query",
                    "description": "Identificador do livro",
                    "required": true,
                    "schema": {
                        "type": "number"
                    }
                }
            ]
        },
        "/editora": {
            "get": {
                "summary": "Retorna uma editora específica.",
                "description": "Busca uma editora específica no banco de dados.",
                "tags": ["Editora"]
            },
            "parameters": [
                {
                    "name": "id",
                    "in": "query",
                    "description": "Identificador da editora",
                    "required": true,
                    "schema": {
                        "type": "number"
                    }
                }
            ]
        },
        "/editoras": {
            "get": {
                "summary": "Retorna todas as editoras.",
                "description": "Busca por todas as editoras cadastradas no banco de dados.",
                "tags": ["Editora"]
            }
        },
        "/editora/new": {
            "post": {
                "summary": "Adiciona uma nova editora.",
                "description": "Cria um novo registro de uma editora.",
                "tags": [
                    "Editora"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Editora"
                            },
                            "examples": {
                                "editoraExemplo": {
                                    "value": {
                                        "Nome": "Abril",
                                        "Cidade": "São Paulo"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Campos obrigarórios inválidos."
                    },
                    "500": {
                        "description": "Erro ao criar uma editora."
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Editora"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/editora/update": {
            "put": {
                "summary": "Atualiza dados de uma editora.",
                "description": "Atualiza as informações de uma editora cadastrada.",
                "tags": ["Editora"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "query",
                        "description": "Identificador da editora",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Editora"
                            },
                            "examples": {
                                "editoraExemplo": {
                                    "value": {
                                        "Nome": "Abril",
                                        "Cidade": "São Paulo"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/editora/remove": {
            "delete": {
                "summary": "Apaga o cadastro de uma editora.",
                "description": "Remove uma editora cadastrada no banco de dados.",
                "tags": ["Editora"]
            },
            "parameters": [
                {
                    "name": "id",
                    "in": "query",
                    "description": "Identificador da editora",
                    "required": true,
                    "schema": {
                        "type": "number"
                    }
                }
            ]
        }
    },
    "components": {
        "schemas": {
            "Livro": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "Titulo": {
                        "type": "string"
                    },
                    "Autor": {
                        "type": "string"
                    },
                    "ISBN": {
                        "type": "number"
                    },
                    "AnoDePublicacao": {
                        "type": "number"
                    },
                    "Editora": {
                        "$ref": "#/components/schemas/Editora"
                    }
                }
            },
            "Editora": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "Nome": {
                        "type": "string"
                    },
                    "Cidade": {
                        "type": "string"
                    }
                }
            }
        }
    }
}